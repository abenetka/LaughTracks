<body>
  <header>
    <h1> C O M E D I A N S </h1>
  </header>

<div class= "statistics" id="statistics-box">
  <h2> Statistics </h2>
  <ul>
    <li>Average TV Special Run Time: <%= @specials.average_run_time.to_i %></li>
    <li>Total TV Specials: <%= @specials.count %></li>
    <li>Average Age of Comedians: <%= @comedians.average_age.to_i %></li>
    <li>Cities: <%= @comedians.list_unique_cities.join(", ") %></li>
  </ul>
</div>


<div class="comedian-grid">
<% @comedians.each do |comic| %>
  <div class="comics" id="comic-<%=comic.id%>">
    <h2><%= comic.name %></h2>
    <div id="comic-info">
      <h4>Age: <%= comic.age%></h4>
      <h4>City: <%= comic.city%></h4>
      <h4>Total Specials: <%=comic.specials.count%></h4>
      </div>
      <h3> - Specials - </h3>

      <div class="specials-grid" id="comic-<%=comic.id%>-specials">

        <% comic.specials.each do |special| %>
        <div id="special-info">
          <h5> <%= special.name %></h5>
          <h5>Length: <%= special.length %> min</h5>
        </div>
        <img src=<%= special.image_url %> >
        <% end %>
      </div>
  </div>

<% end %>
</div>
